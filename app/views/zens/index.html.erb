<p id="notice"><%= notice %></p>

<h1>Zens</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zens.each do |zen| %>
      <tr>
        <td><%= zen.content %></td>
        <td><%= zen.deleted %></td>
        <td><%= link_to 'Show', zen %></td>
        <td><%= link_to 'Edit', edit_zen_path(zen) %></td>
        <td><%= link_to 'Destroy', zen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Zen', new_zen_path %>
