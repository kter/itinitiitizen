<p id="notice"><%= notice %></p>

<h1>みんなの一善</h1>

<%= render 'form', zen: @zen %>

<br>

<table>
  <thead>
    <tr>
      <th>一善の内容</th>
      <th>お名前</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zens.each do |zen| %>
      <tr>
        <td><%= zen.content %></td>
        <td><%= User.find(zen.user_id).get_nickname %></td>
        <td><%= zen.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= link_to 'Show', zen %></td>
        <% if current_user.id == zen.user_id %>
        <td><%= link_to 'Edit', zens_path(id: zen.id) %></td>
        <td><%= link_to 'Destroy', zen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>
